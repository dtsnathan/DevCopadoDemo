<apex:page StandardController="Shopping_Mall__c" sidebar="false" showHeader="false">
  <apex:form >
    <apex:pageBlock title="Details">
        <apex:pageBlockSection title="Customer Personal Details" columns="2">
            <apex:inputField value="{!Shopping_Mall__c.First_Name__c}"/>
            <apex:inputField value="{!Shopping_Mall__c.Last_Name__c}"/> 
            <apex:inputField value="{!Shopping_Mall__c.Gender__c}"/>
            <apex:inputField value="{!Shopping_Mall__c.Qualification__c}"/>
            <apex:inputField value="{!Shopping_Mall__c.Date_of_Birth__c}"/>
            <apex:inputField value="{!Shopping_Mall__c.Age__c}"/>            
            <apex:inputField value="{!Shopping_Mall__c.Phone__c}"/> 
            <apex:inputField value="{!Shopping_Mall__c.Email__c}"/>             
            <apex:inputField value="{!Shopping_Mall__c.Address__c}"/>
        </apex:pageBlockSection>
          
        <apex:pageBlockSection title="Company Details" columns="1">
            <apex:inputField value="{!Shopping_Mall__c.Name}"/>
            <apex:inputField value="{!Shopping_Mall__c.Phone__c}"/> 
            <apex:inputField value="{!Shopping_Mall__c.Email__c}"/>             
            <apex:inputField value="{!Shopping_Mall__c.Address__c}"/>
            </apex:pageBlockSection>
                <apex:pageBlockButtons location="Bottom" >
            <apex:commandButton value="Save" action="{!save}"/>
            <apex:commandButton value="Cancel" action="{!Cancel}"/>
                </apex:pageBlockButtons>
        
    </apex:pageBlock>
</apex:form>
</apex:page>